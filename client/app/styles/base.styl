/*
 * Original font files taken from Google Fonts repository.
 * Different web font formats generated by FontSquirrel.
 * You'll have to use this font-families instead of `font-weight` or `font-style`
 * to set bold and italic; otherwise, the bold and italic effects are approximated
 * by the browser, instead of using the font designer's original work.
 */

@font-face {
    font-family: 'Source Sans Pro bold';
    src: url('/fonts/source-sans-pro-webfontkit/sourcesanspro-bold.eot');
    src: url('/fonts/source-sans-pro-webfontkit/sourcesanspro-bold.eot?#iefix') format('embedded-opentype'),
         url('/fonts/source-sans-pro-webfontkit/sourcesanspro-bold.woff2') format('woff2'),
         url('/fonts/source-sans-pro-webfontkit/sourcesanspro-bold.woff') format('woff'),
         url('/fonts/source-sans-pro-webfontkit/sourcesanspro-bold.ttf') format('truetype'),
         url('/fonts/source-sans-pro-webfontkit/sourcesanspro-bold.svg#source_sans_probold') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Source Sans Pro bold-italic';
    src: url('/fonts/source-sans-pro-webfontkit/sourcesanspro-bolditalic.eot');
    src: url('/fonts/source-sans-pro-webfontkit/sourcesanspro-bolditalic.eot?#iefix') format('embedded-opentype'),
