lightgrey = #FDFDFD
softgrey = #DADADA
middlegrey = #3A3A3A
darkgrey = #525252
orange = #fe8800
blue = #34a6ff
lightblue = #CBE4FB
lightorange = #FFC47F

transform()
  -webkit-transform: arguments
  -moz-transform: arguments
  -ms-transform: arguments
  -o-transform: arguments
  transform: arguments

iframe
    border: 0

#help-info
    margin-top: 3%
    text-align: center
    color: #999

#note-full-breadcrumb
    position: absolute;
    top: 1.25em
    margin-top: 0.6em
    margin-bottom: 0.6em
    margin-left: 2.2%
    margin-right: 2%
    font-size: 0.85em
    border: 0
    color: grey + 20%
    z-index: 51

    a
        color: grey + 20%

    a:hover
        color: orange


#note-full-breadcrumb.topaffix
    position fixed
    top: 0

    @media (max-width: 16in)
        top: 0

#note-full
    padding: 0
    border: 0
    box-shadow: 0
    max-width: 42em
    margin: auto

#editor
    padding: 0
    padding-top: 5em
    margin: 0
    width: 100%
    height: 70%

#note-area
    height: 100%
    margin: auto
    background: #F5F5F5
    background-image: url('../img/background-note.jpg')

#note-style
    margin: 3em auto
    padding: 1.4em 3em
    border: 0.1em solid #DDD
    background: #FDFDFD
    background-position: right top
    background-repeat: no-repeat
    box-shadow: 0.1em 0.1em 0.1em #DDD
    min-height: 20em

@media(max-height: 500px)
    #note-style
        min-height: 10em

#faketop
    padding-top: 3em
    margin-top: 2.5em
    border-right: 0
    background: #FDFDFD
    background-position: right top
    background-repeat: no-repeat
    height: 4.3em
    padding-bottom: 0
    margin-top: 0
    border-bottom: 0
    position: fixed
    top: -7.5em
    z-index: 50

#faketop.topaffix
    top: 0

#faketop-grad
    position: absolute
    margin: 0 3em
    bottom: -1em
    height: 1em
    width: 100%
    left: -3em
    background -webkit-linear-gradient(top, softgrey, rgba(255, 255, 255, 0))
    background -ms-linear-gradient(top, softgrey, rgba(255, 255, 255, 0))
    background -o-linear-gradient(top, softgrey, rgba(255, 255, 255, 0))
    background -moz-linear-gradient(top, softgrey, rgba(255, 255, 255, 0))
    background linear-gradient(top, softgrey, rgba(255, 255, 255, 0))
    visibility:hidden
#faketop-grad.topaffix
    visibility:visible

#editor-container
    height: 100%
    width: 100%

#note-full-title
    margin: 0
    color: #222
    border: 0
    background: none repeat scroll 0 0 transparent
    font-size: 1.6em
    position:absolute
    top: 4.5em
    z-index: 53

#note-full-title:hover
    outline: 0.1em solid lightorange

#note-full-title:active
#note-full-title:focus
    background-color: white
    outline: 0.1em solid lightblue
    box-shadow: none

#note-full-title.topaffix
    position fixed
    top 3em

// Buttons

#editor-button-bar
    position: fixed
    opacity: 1
    z-index: 200
    left: 3.5%;
    top: 16%

    .btn
        border: 0.1em solid #F2F2F2
        background-color: #FCFCFC
        background-image: none
        box-shadow: 0
        padding: 0.5em 0.5em 0.5em 0.5em


        i
            background-position: 0 0
            opacity: 0.3

        i.icon-indent-left
            background-image: url('../img/menu-indent-left.png')
        i.icon-indent-right
            background-image: url('../img/menu-indent-right.png')
        i.icon-th-list
            background-image: url('../img/menu-bullet-point.png')
        i.icon-text-height
            background-image: url('../img/menu-title.png')
        i.icon-toggle
            background-image: url('../img/02-menu-Toggle-light.png')
        i.icon-bold
            background-image: url('../img/02-menu-Bold-light.png')
        i.icon-link
            background-image: url('../img/02-menu-Link-light.png')
        i.icon-tags
            background-image: url('../img/02-menu-Meta-light.png')
        i.icon-download-alt
            background-image: url('../img/menu-save.png')

    .btn:hover

        i.icon-indent-left
            background-image: url('../img/menu-indent-left-over.png')
        i.icon-indent-right
            background-image: url('../img/menu-indent-right-over.png')
        i.icon-th-list
            background-image: url('../img/menu-bullet-point-over.png')
        i.icon-text-height
            background-image: url('../img/menu-title-over.png')
        i.icon-toggle
            background-image: url('../img/02-menu-Toggle-rollover.png')
        i.icon-bold
            background-image: url('../img/02-menu-Bold-rollover.png')
        i.icon-link
            background-image: url('../img/02-menu-Link-rollover.png')
        i.icon-tags
            background-image: url('../img/02-menu-Meta-rollover.png')
        i.icon-download-alt
            background-image: url('../img/menu-save-over.png')

    .btn:active
    .active
        background-color: #EAEAEA
        box-shadow: inset 0.2em 0 0.2em #EAEAEA - 10%

#editor-button-bar:hover
    .btn
        box-shadow: inset -0.25em 0 0.2em #F5F5F5
        border: 0.1em solid #DDD

        i
            background-position: 0 0
            opacity: 1

    .btn:active
    .active
        background-color: #EAEAEA
        box-shadow: inset 0.25em 0 0.2em #EAEAEA - 10%


// File list

#note-file-list .note-file:first-child
    border: 0

#note-file-list #file-list
    display: none

#note-file-list
    width: 16em
    position: absolute
    margin: 0
    top: 3.5em
    border: 0.1em solid #EEE
    background: white
    box-shadow: 0.1em 0.1em 0.1em #EEE
    color: softgrey
    z-index: 55

    .note-file
        display: none
        padding-left: 0.6em
        padding-bottom: 0.15em
        margin-top: 0.25em
        z-index: 10
        border-top: 0.1em solid softgrey

        a
            font-size: 0.9em
            color: lightgrey - 20%

        a:hover
            color: orange

        button
            border: none
            background: white
            font-size: 0.7em
            color: lightgrey

        button:hover
            text-decoration: underline
            color: lightgrey - 20%

    #file-number
        text-align: left
        padding: 0.2em

    #file-pic
        position: absolute !important
        left: 65%
        top: -16px
        height: 40px
        width: 27px
        background-image: url('../img/attachment.png')

    #file-pic:hover
        background-image: url('../img/attachment-hover.png')

#note-file-list.topaffix
    position fixed
    top 2.5em


// Misc

#drag
    z-index: -1
    bottom: 22px;
    left: 17px;
    position: absolute;
    right: 15px;
    top: 112px;

// Search view

#search-view, #latest-view

    span
        font-family: 'Source Sans Pro regular-italic'

    h1
        padding: 0.6em


    a
    a:visited
        color: #222

    h2
        span.date
            float right
            font-family 'Source Sans Pro regular'
            color black + 30%

    .search-result
        margin: 0.6em
        padding: 0 1.25em
        border: 0.1em solid lightgrey
        box-shadow: 0.1em 0.1em 0.1em #EEE
        background: white
        box-shadow: none


// Responsive

@media (max-width: 450px)

    #note-file-list
        display: none

    #note-full-title
        width: 80%
        max-width: 80%

    #note-area
        padding: 0 0 0 10px

    #note-full
        padding: 0

    #note-full-breadcrumb
        padding-left: 10px

    #note-style
        padding: 5px 5px 5px 10px
        margin-top: 5px

    #editor-button-bar
        left: 0

    #editor
        padding-top: 53px
