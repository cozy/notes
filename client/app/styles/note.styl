iframe
    border: 0

#help-info
    margin-top: 3%
    text-align: center
    color: #999

#note-full-breadcrumb
    position: absolute;
    top: 20px
    margin-top: 10px
    margin-bottom: 10px
    margin-left: 2.2%
    margin-right: 2%
    font-family: main
    font-size: 14px
    border: 0
    color: darkgrey
    z-index: 51

    a
        color: darkgrey

#note-full-breadcrumb.topaffix
    position fixed
    top 2px

#note-full
    padding: 8px 2% 0px 2% 
    border: 0
    box-shadow: 0

#editor
    padding: 0
    padding-top: 83px
    margin: 0
    width: 100%
    height: 70%

#note-area
    height: 100%
    margin: 0
    background: #F5F5F5
    background-image: url('../img/background-note.jpg')
    
#note-style
    margin: 40px 2%
    padding: 20px 50px
    border: 1px solid lightgrey + 30%
    background: #FDFDFD
    background-position: right top
    background-repeat: no-repeat
    box-shadow: 1px 1px 2px #DDD

#faketop
    margin-top: 40px
    padding: 20px 50px
    margin-left: 2%
    margin-right: 2%
    border: 1px solid lightgrey + 30%
    border-right: 0px
    background: #FDFDFD
    background-position: right top
    background-repeat: no-repeat
    height: 60px
    padding-bottom: 0
    margin-top: 0
    border-bottom : 0
    position: fixed
    top: -100px
    z-index: 50
    //display:none
#faketop.topaffix
    //display:block
    top:0px

#faketop-grad
    position: absolute
    margin: 0px 50px
    bottom: -15px
    height: 15px
    width: 100%
    left: -50px
    background -webkit-linear-gradient(top, #e7f4f9, rgba(255, 255, 255, 0))
    background -ms-linear-gradient(top, #e7f4f9, rgba(255, 255, 255, 0))
    background -o-linear-gradient(top, #e7f4f9, rgba(255, 255, 255, 0))
    background -moz-linear-gradient(top, #e7f4f9, rgba(255, 255, 255, 0))
    background linear-gradient(top, #e7f4f9, rgba(255, 255, 255, 0))
    visibility:hidden
#faketop-grad.topaffix
    visibility:visible

#editor-container
    margin-left: 0
    margin-right: 0
    height: 100%
    width: 100%
    position: relative

#note-full-title
    height: 35px
    margin: 0px 0 5px 10px
    // width: 60%
    color: #222
    border: 0px
    background: none repeat scroll 0 0 transparent
    font-family: main
    font-size: 30px
    letter-spacing: -2px
    position:absolute
    top: 115px
    z-index: 53
    
#note-full-title:focus
    outline: 0 none
    border-color: rgba(82, 168, 236, 0.8)
    background-color: white
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6)

#note-full-title.topaffix
    position fixed
    top 35px

// Buttons

#editor-button-bar
    position: fixed
    opacity: 1

    left: 3.5%;
    top: 150px;

    .btn
        border: 1px solid #F2F2F2
        background-color: #FCFCFC
        background-image: none
        box-shadow: 0
        padding: 8px 8px 8px 8px


        i
            background-position: 0 0
            opacity: 0.3

        i.icon-indent-left
            background-image: url('../img/menu-indent-left.png')
        i.icon-indent-right
            background-image: url('../img/menu-indent-right.png')
        i.icon-th-list
            background-image: url('../img/menu-bullet-point.png')
        i.icon-text-height
            background-image: url('../img/menu-title.png')
        i.icon-toggle
            background-image: url('../img/02-menu-Toggle-light.png')
        i.icon-download-alt
            background-image: url('../img/menu-save.png')

    .btn:hover

        i.icon-indent-left
            background-image: url('../img/menu-indent-left-over.png')
        i.icon-indent-right
            background-image: url('../img/menu-indent-right-over.png')
        i.icon-th-list
            background-image: url('../img/menu-bullet-point-over.png')
        i.icon-text-height
            background-image: url('../img/menu-title-over.png')
        i.icon-toggle
            background-image: url('../img/02-menu-Toggle-rollover.png')
        i.icon-download-alt
            background-image: url('../img/menu-save-over.png')

    .btn:active
    .active
        background-color: #EAEAEA
        box-shadow: inset 4px 0px 3px #EAEAEA - 10%

#editor-button-bar:hover
    .btn
        box-shadow: inset -4px 0px 3px #F5F5F5
        border: 1px solid #DDD

        i
            background-position: 0 0
            opacity: 1

    .btn:active
    .active
        background-color: #EAEAEA
        box-shadow: inset 4px 0px 3px #EAEAEA - 10%


// File list

#note-file-list .note-file:first-child
    border: 0

#note-file-list #file-list
    display: none

#note-file-list
    position: absolute
    padding: 0 0 10px 0
    margin: 0
    min-width: 250px
    right: 14%
    top: 55px
    border: 1px solid lightgrey
    text-align: center
    background: white
    box-shadow: 1px 1px 2px #EEE
    font-family: main, helvetica
    color: lightgrey
    z-index: 52;

    .note-file
        display: none
        padding-left: 10px
        padding-bottom: 3px
        margin-top: 5px
        z-index: 10
        border-top: 1px solid lightgrey

        a
            font-size: 0.9em
            color: lightgrey - 20%

        a:hover
            color: lightgrey - 50%

        button
            border: none
            background: white
            font-size: 0.6em
            color: lightgrey

        button:hover
            text-decoration: underline
            color: lightgrey - 20%

    #file-number
        // float: left
        text-align: left
        padding: 6px

    #file-pic
        position: absolute !important
        left: 60%
        top: -16px
        height: 40px
        width: 27px
        background-image: url('../img/attachment.png')

#note-file-list.topaffix
    position fixed
    top 17px
    right 3.5%
    margin-right: 20px

    #file-pic
        left auto
        right -10px
        top 0px
        transform: rotate(90deg)


// Misc

#drag
    z-index: -1
    bottom: 22px;
    left: 17px;
    position: absolute;
    right: 15px;
    top: 112px;

// Search view

#search-view
    font-family: main, helvetica
    
    span
        font-style: italic

    h1
        font-size: 16px
        padding: 10px

    a
    a:visited
        color: #222

    h2
        font-size: 25px

    .search-result
        margin: 10px
