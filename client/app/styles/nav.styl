lightgrey = #FAFAFA
bggrey = #F4F4F4
whitegrey = #FCFCFC
darkgrey = #333
grey = #E8E8E8
blue = #7DBBF4
lightblue = #CBE4FB
lightorange = #FFC47F

// Nav container styles

#nav
    padding: 0
    background: bggrey
    color: darkgrey

#my-notes
    padding-left: 1.1em
    border-top: 0.1em solid whitegrey

    #my-notes-pic
        margin-top: 1em

    #create-note
        float: right
        width: 31px
        height: 31px
        background-image: url('../img/add-corner.png')
        cursor: pointer

    #create-note:hover
        background-image: url('../img/add-corner-over.png')

// Tree styles

#tree
    outline: none
    margin-top: 0.8em
    border-top: 0.1em solid grey
    border-bottom: 0.1em solid grey
    background-color: transparent
    font-size: 0.9em

    #tree-node-all > ins:first-child
        display: none
    #tree-node-all > a
        display: none
    #tree-node-all
        padding: 0
    #tree-node-all > ul
        padding: 1.2em 0
        margin: 0
    #tree-node-all > li
        padding: 0

    li
        position: relative
        margin-left: 0.6em
    li:last-child
        border-bottom: 0.1em solid whitegrey

    ul > li > ul > li:last-child
        border-bottom: 0

    ins
        width: 0.9em
        margin-left: 0

    a
        padding: 0.1em 0 0 0.15em
        margin:  0
        border:  0
        left: 1em
        right: 0
        position: absolute
        color: darkgrey

    .jstree-clicked
        border: 0
        background: lightblue

    .jstree-leaf ins.jstree-icon
        background-image: url('../img/icon-note.png')
        background-repeat: no-repeat

    .jstree-hovered
        border: 0
        background: lightorange

    .jstree-rename-input
        margin-left: -0.4em
        margin-top: 0


// Search field styles
#tree-top-buttons
    padding-bottom: 0
    border-bottom: 0.1em solid grey

#tree-buttons
    display: none
    position: absolute
    right: 0.2em
    top: 0.1em

    div
        display: inline
        opacity: 0.5

    .icon-plus
        background-image: url('../img/add.png')
        background-position: 0 0

    .icon-plus:hover
        background-image: url('../img/add-over.png')
        background-position: 0 0

    .icon-remove
        background-image: url('../img/remove.png')
        background-position: 0 0

    .icon-remove:hover
        background-image: url('../img/remove-over.png')
        background-position: 0 0

    .icon-pencil
        background-image: url('../img/rename.png')
        background-position: 0 0

    .icon-pencil:hover
        background-image: url('../img/rename-over.png')
        background-position: 0 0

.text-core
    margin: 1.25em 6%
    width: 88%

    .text-wrap
        width: 100%

.bold-name
    font-family: 'Source Sans Pro bold';

.text-dropdown i
    padding-right: 0.2em

.tag-special
    height: 0.9em
    position: relative
    margin: 0 0.1em 0.1em 0
    padding: 0 0.15em 0 0.15em
    border: none
    border: 0.1em solid #FFFFFF
    background-color: white
    font: 0.8em "lucida grande",tahoma,verdana,arial,sans-serif
    color: white

#tree-search-field
    border: 0.1em solid #DDD
    width: 100%

#tree-search-field:hover
    border: 0.1em solid orange
    box-shadow: 0 0 0 rgba(0, 0, 0, 0) inset

#tree-search-field:focus
    border: 0.1em solid blue
    box-shadow: 0 0 0 rgba(0, 0, 0, 0) inset

#tree-top-buttons
    input[type="text"]:focus
        box-shadow: 0 0 0 rgba(0, 0, 0, 0) inset
        transition: 0

#suppr-button
    position: absolute
    top: 1.5em
    left: 12
    z-index: 2

#suppr-button:hover
    cursor: pointer


// Separator style (between nav and content)

.ui-layout-west
    border: 0

.ui-layout-center
    border: 0

.ui-layout-resizer-open:hover
    background whitegrey

.ui-layout-resizer
    width: 0.6em
    border-right: 0.1em solid grey
    border-left: 0.1em solid grey
    background-color: whitegrey

.ui-layout-resizer:hover
    border-right: 0.1em solid orange
    border-left: 0.1em solid orange
    cursor: e-resize

.ui-layout-pane
    border-right: 0

.ui-layout-toggler
    position: absolute
    right: 0
    border: 0
    background-color: whitegrey

.ui-layout-resizer:hover .ui-layout-toggler:hover
    background-color: orange

.ui-layout-resizer-open:hover .ui-layout-toggler
    background-color: #BFBFBF
